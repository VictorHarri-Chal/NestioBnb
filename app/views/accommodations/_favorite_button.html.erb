<div id="favorite_button">
  <% if @user_favorite.nil? %>
    <%= button_to like_accommodation_path(@accommodation, view_type: "show"), method: :post, class: "w-full flex items-center justify-center rounded-md border border-gray-300 bg-white px-8 py-3 text-base font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200 hover:cursor-pointer" do %>
      Add to favorites
    <% end %>
  <% else %>
    <%= button_to dislike_accommodation_path(@accommodation, view_type: "show"), method: :post, class: "w-full flex items-center justify-center rounded-md border border-gray-300 bg-white px-8 py-3 text-base font-medium text-gray-700 hover:bg-gray-50 transition-colors duration-200 hover:cursor-pointer" do %>
      Remove from favorites
    <% end %>
  <% end %>
</div>
