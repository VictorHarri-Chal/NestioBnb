<div class="mt-10 lg:mt-0">
  <div class="bg-white border border-gray-200 rounded-xl p-8 shadow-md sticky top-4 z-10">
    <h3 class="text-2xl font-bold text-gray-900 mb-8">Your reservation</h3>

    <div class="space-y-4">
      <div class="bg-gray-50 p-4 rounded-lg">
        <span class="font-semibold text-gray-900 text-lg mb-2 block">Guest</span>
        <p class="text-gray-700"><%= @reservation.occupant.email %></p>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg">
        <span class="font-semibold text-gray-900 text-lg mb-2 block">Check-in</span>
        <p class="text-gray-700"><%= @reservation.start_date.strftime("%B %d, %Y") %></p>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg">
        <span class="font-semibold text-gray-900 text-lg mb-2 block">Check-out</span>
        <p class="text-gray-700"><%= @reservation.end_date.strftime("%B %d, %Y") %></p>
      </div>

      <div class="mt-8 pt-6 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <span class="inline-block px-4 py-2 text-sm font-semibold rounded-full <%= reservation_status_classes(@reservation.status) %>">
            <%= @reservation.status.text %>
          </span>
        </div>
      </div>
      <% if @reservation.status == "pending" %>
        <%= button_to "Cancel reservation",
            reservation_path(@reservation),
            method: :delete,
            data: {
              turbo_confirm: "Are you sure you want to cancel this reservation?"
            },
            form: {
              data: { turbo_frame: "_top" }
            },
            class: "mt-8 w-full flex items-center justify-center rounded-lg border border-transparent bg-red-600 px-8 py-4 text-base font-medium text-white hover:bg-red-700 focus:ring-4 focus:ring-red-500/20 focus:ring-offset-2 focus:outline-none transition-all duration-200 cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
