<div class="fixed inset-0 bg-black/50 transition-opacity z-50">
  <div class="fixed inset-0  overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center">
      <div class="relative transform overflow-hidden rounded-lg bg-white pl-8 pt-5 text-left shadow-xl transition-all w-full max-w-2xl">
        <div class="absolute right-0 top-0 pr-4 pt-4">
          <button type="button" class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none cursor-pointer" data-action="click->modal#close">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3 class="text-2xl font-semibold leading-6 text-gray-900 mb-6">All ratings</h3>

            <div class="space-y-6 max-h-[60vh] overflow-y-auto pr-2">
              <% @notations.each_with_index do |notation, index| %>
                <div class="<%= 'border-b border-gray-200' unless index == @notations.length - 1 %> pb-6">
                  <%= render "notations/card", notation: notation %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
