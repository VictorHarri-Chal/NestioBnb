<div class="min-h-screen">
  <div class="border-b mb-6 border-gray-200">
    <nav class="flex space-x-8">
      <%= link_to "My accommodations", profile_path(tab: 'accommodations'),
          class: "px-4 py-2 border-b-2 #{params[:tab].nil? || params[:tab] == 'accommodations' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'}" %>

      <%= link_to "My favorites", profile_path(tab: 'favorites'),
          class: "px-4 py-2 border-b-2 #{params[:tab] == 'favorites' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'}" %>

      <%= link_to "My reservations", profile_path(tab: 'reservations'),
          class: "px-4 py-2 border-b-2 #{params[:tab] == 'reservations' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'}" %>

      <%= link_to "Received requests", profile_path(tab: 'requests'),
          class: "px-4 py-2 border-b-2 #{params[:tab] == 'requests' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700'}" %>

      <%= link_to "Account", edit_user_registration_path,
          class: "px-4 py-2 border-b-2 border-transparent text-gray-500 hover:text-gray-700" %>
    </nav>
  </div>

  <% if params[:tab].nil? || params[:tab] == 'accommodations' %>
    <%= render 'accommodations' %>
  <% elsif params[:tab] == 'reservations' %>
    <%= render 'reservations' %>
  <% elsif params[:tab] == 'favorites' %>
    <%= render 'favorites' %>
  <% elsif params[:tab] == 'requests' %>
    <%= render 'requests' %>
  <% end %>
</div>
