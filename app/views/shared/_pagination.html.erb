<div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6">
  <div class="flex flex-1 justify-between sm:hidden">
    <%= link_to url_for(page: pagy.prev, sw_lat: params[:sw_lat], ne_lat: params[:ne_lat], sw_lng: params[:sw_lng], ne_lng: params[:ne_lng], query: params[:query]), class: "relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50", disabled: !pagy.prev do %>
      Previous
    <% end %>
    <%= link_to url_for(page: pagy.next, sw_lat: params[:sw_lat], ne_lat: params[:ne_lat], sw_lng: params[:sw_lng], ne_lng: params[:ne_lng], query: params[:query]), class: "relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50", disabled: !pagy.next do %>
      Next
    <% end %>
  </div>
  <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
    <div>
      <p class="text-sm text-gray-700">
        Showing
        <span class="font-medium"><%= pagy.from %></span>
        to
        <span class="font-medium"><%= pagy.to %></span>
        of
        <span class="font-medium"><%= pagy.count %></span>
        results
        <span class="ml-4"></span>
      </p>
    </div>
    <div>
      <nav class="isolate inline-flex -space-x-px rounded-md shadow-xs" aria-label="Pagination">
        <%= link_to url_for(page: pagy.prev, sw_lat: params[:sw_lat], ne_lat: params[:ne_lat], sw_lng: params[:sw_lng], ne_lng: params[:ne_lng], query: params[:query]), class: "relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-gray-300 ring-inset hover:bg-gray-50 focus:z-20 focus:outline-offset-0", disabled: !pagy.prev do %>
          <span class="sr-only">Previous</span>
          <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
            <path fill-rule="evenodd" d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
          </svg>
        <% end %>

        <% pagy.series.each do |item| %>
          <% if item.is_a?(Integer) %>
            <%= link_to item, url_for(page: item, sw_lat: params[:sw_lat], ne_lat: params[:ne_lat], sw_lng: params[:sw_lng], ne_lng: params[:ne_lng], query: params[:query]), class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0",
                data: { turbo_frame: "accommodations_list" } %>
          <% elsif item.is_a?(String) && item != 'gap' %>
            <%= link_to item, url_for(page: item, sw_lat: params[:sw_lat], ne_lat: params[:ne_lat], sw_lng: params[:sw_lng], ne_lng: params[:ne_lng], query: params[:query]),
                class: "relative z-10 inline-flex items-center bg-indigo-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600",
                data: { turbo_frame: "accommodations_list" } %>
          <% elsif item.is_a?(String) && item == 'gap' %>
            <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-blue-700 ring-1 ring-gray-300 ring-inset focus:outline-offset-0">...</span>
          <% end %>
        <% end %>

        <%= link_to url_for(page: pagy.next, sw_lat: params[:sw_lat], ne_lat: params[:ne_lat], sw_lng: params[:sw_lng], ne_lng: params[:ne_lng], query: params[:query]), class: "relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-gray-300 ring-inset hover:bg-gray-50 focus:z-20 focus:outline-offset-0", disabled: !pagy.next do %>
          <span class="sr-only">Next</span>
          <svg class="size-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
            <path fill-rule="evenodd" d="M8.22 5.22a.75.75 0 0 1 0 1.06L11.94 10l-3.72 3.72a.75.75 0 1 0 1.06 1.06l4.25-4.25a.75.75 0 0 0 0-1.06l-4.25-4.25a.75.75 0 0 0-1.06 0Z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </nav>
    </div>
  </div>
</div>
